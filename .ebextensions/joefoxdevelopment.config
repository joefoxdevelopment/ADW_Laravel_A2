# .ebextensions/joefoxdevelopment.config

# Anything else that should happen is added here

commands:
    01_nvm_install:
        command: 'curl -o- https://raw.githubusercontent.com/creationix/nvm/v0.33.6/install.sh | bash'
        command: '. ~/.nvm/nvm.sh'
        command: '. ~/.bashrc'
        command: 'nvm install 8.*'

container_commands:
    01_laravel_mix:
        command: 'npm install && npm run production'
